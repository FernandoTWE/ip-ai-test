---
const { generalInfo } = Astro.props;
---
<div class="bg-white bg-opacity-90 p-6 rounded-3xl shadow-2xl mb-4">
  <h3 class="text-2xl font-bold mb-2">Información General</h3>
  <p><strong>Ciudad:</strong> {generalInfo.city}</p>
  <p><strong>Estado:</strong> {generalInfo.state}</p>
  <p><strong>País:</strong> {generalInfo.country}</p>
  <p><strong>Latitud:</strong> {generalInfo.latitude}</p>
  <p><strong>Longitud:</strong> {generalInfo.longitude}</p>
  <p><strong>ISP:</strong> {generalInfo.ispName}</p>
  <p><strong>IP:</strong> {generalInfo.ipNumber}</p>
</div>
